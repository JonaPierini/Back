<h1>Carrito</h1>

{{#if products}}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        {{#if this}}
        <tr>
            <th class="align-middle"><img width="80" height="80" src={{this.image}} alt=""></th>
            <td class="align-middle">{{this.title}}</td>
            <td class="align-middle">${{this.price}}</td>
            <td class="align-middle">{{this.description}}</td>
            <td class="align-middle ">

                <button class="icon_trash" onclick="deleteProductInCart('{{this._id}}')">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path
                            d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                    </svg>
                </button>
            </td>
        </tr>
        {{/if}}
        {{/each}}
    </tbody>
</table>
{{else}}
<h2>No hay productos en el carrito</h2>
{{/if}}