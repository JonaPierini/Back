<h1>Productos</h1>

{{#if products}}


<ul id="container_products">
    {{#each products}}
    <div class="card {{this._id}}" style="width: 18rem;">
        <button class="icon_pencil" onclick="openModalUpdate('{{this._id}}')">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <path
                    d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z" />
            </svg>
        </button>
        <button class="icon_trash" onclick="deleteProduct('{{this._id}}')">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path
                    d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
            </svg>
        </button>

        <img src={{this.image}} class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title{{this._id}}">{{this.title}}</h5>
            <p class="card-text description{{this._id}}">{{this.description}}</p>
            <p class="card-text price{{this._id}}">${{this.price}}</p>
            <button onclick="addToCart('{{this._id}}')" href="#" class="btn btn-primary align-self-end">Add to
                cart</button>
        </div>
    </div>
    {{/each}}

</ul>
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar Producto</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form_updateProduct" onsubmit="send_update">
                    <label for="input_title">Titulo:</label>
                    <input type="text" name="title" id="input_title">
                    <label for="input_description">Descripción:</label>
                    <input type="text" name="description" id="input_description">
                    <label for="input_price">Precio:</label>
                    <input type="number" name="price" id="input_price">
                    <label for="input_update_image">Imagen url:</label>
                    <input type="text" name="image" id="input_update_image">
                    <input type="text" name="productId" id="productId" hidden>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" form="form_updateProduct" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3 ">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">

        <div class="toast-body">
            <svg style="height: 30px;width: 30px; fill: green; margin-right: 10px;" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512">
                <path
                    d="M470.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L192 338.7 425.4 105.4c12.5-12.5 32.8-12.5 45.3 0z" />
            </svg> Producto añadido
        </div>
    </div>
</div>

{{else}}
<h2>No hay productos cargados</h2>
{{/if}}